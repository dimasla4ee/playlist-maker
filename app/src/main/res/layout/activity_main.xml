<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/LinearLayout"
    android:paddingBottom="@dimen/normal_150">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/app_name"
        app:titleTextAppearance="@style/Text.PanelHeader" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?attr/actionBarSize"
        android:orientation="vertical">

        <Button
            android:id="@+id/searchButton"
            style="@style/Button.MainScreen"
            android:text="@string/search"
            app:icon="@drawable/ic_search_24" />

        <Button
            android:id="@+id/mediaLibraryButton"
            style="@style/Button.MainScreen"
            android:text="@string/media_library"
            app:icon="@drawable/ic_media_library_24" />

        <Button
            android:id="@+id/settingsButton"
            style="@style/Button.MainScreen"
            android:text="@string/settings"
            app:icon="@drawable/ic_settings_24" />
    </LinearLayout>

</LinearLayout>