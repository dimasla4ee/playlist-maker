<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text styles -->
    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.Regular" parent="Text">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">@dimen/regular_weight</item>
    </style>

    <style name="Text.Regular.16" parent="Text.Regular">
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="Text.Regular.13" parent="Text.Regular">
        <item name="android:textSize">@dimen/text_13</item>
    </style>

    <style name="Text.Regular.11" parent="Text.Regular">
        <item name="android:textSize">@dimen/text_11</item>
    </style>

    <style name="Text.Medium" parent="Text">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">@dimen/medium_weight</item>
    </style>

    <style name="Text.Medium.14" parent="Text.Medium">
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="Text.Medium.19" parent="Text.Medium">
        <item name="android:textSize">@dimen/text_19</item>
    </style>

    <style name="Text.Medium.22" parent="Text.Medium">
        <item name="android:textSize">@dimen/text_22</item>
    </style>

    <!-- SongInfo styles -->
    <style name="Text.SongInfo" parent="Text.Regular.13">
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintHorizontal_chainStyle">spread_inside</item>
        <item name="android:paddingVertical">@dimen/small_100</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Text.SongInfo.Label" parent="Text.SongInfo">
        <item name="layout_constraintHorizontal_weight">3</item>
        <item name="android:textColor">?attr/colorOnSecondaryFixed</item>
    </style>

    <style name="Text.SongInfo.Fetched" parent="Text.SongInfo">
        <item name="android:textAlignment">textEnd</item>
        <item name="layout_constraintHorizontal_weight">7</item>
    </style>

    <style name="Text.PanelHeader" parent="Text.Medium.22">
        <item name="android:layout_marginTop">@dimen/small_125</item>
        <item name="android:layout_marginBottom">@dimen/small_150</item>
        <item name="android:layout_marginStart">@dimen/small_150</item>
        <item name="android:layout_marginEnd">@dimen/small_150</item>
    </style>

    <style name="Text.Setting" parent="Text.Regular.16">
        <item name="android:layout_marginHorizontal">@dimen/normal_100</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>
</resources>