<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- EditText styles -->
    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="EditText.SearchBar" parent="EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/normal_150</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginHorizontal">@dimen/small_100</item>
        <item name="android:textColorHint">?attr/colorOnPrimaryContainer</item>
        <item name="android:textAppearance">@style/Text.Regular.16</item>
        <item name="android:textColor">?attr/colorOnPrimaryFixed</item>
    </style>

    <style name="Widget" />

    <style name="Widget.PlaylistMaker" />

    <style name="Widget.PlaylistMaker.AppBar" parent="Widget.Material3.Toolbar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="titleTextAppearance">@style/TextAppearance.PlaylistMaker.AppBar.Title</item>
    </style>

    <style name="Widget.PlaylistMaker.Setting.Base" parent="Text.Regular.16">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/Setting.Height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/App.Padding.Horizontal</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="Widget.PlaylistMaker.Setting.Button" parent="Widget.PlaylistMaker.Setting.Base">
        <item name="drawableTint">?colorOnSurfaceVariant</item>
    </style>

    <style name="Widget.PlaylistMaker.Setting.Switch" parent="Widget.PlaylistMaker.Setting.Base">
        <item name="thumbTint">@color/switch_thumb_state</item>
        <item name="trackTint">@color/switch_track_state</item>
    </style>

    <!-- LinearLayout styles -->
    <style name="LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearLayout.Searchbar" parent="LinearLayout">
        <item name="android:layout_height">@dimen/searchbar_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/small_150</item>
        <item name="android:paddingVertical">@dimen/small_125</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:backgroundTint">?attr/colorSurfaceContainerHighest</item>
    </style>

    <!-- Weight styles -->
    <style name="Weight" />

    <style name="Weight.Horizontal" parent="Weight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Weight.Horizontal.1" parent="Weight.Horizontal">
        <item name="android:layout_weight">1</item>
    </style>


    <!-- Constraint Layout styles -->
    <style name="ConstraintLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Guidelines -->
    <style name="Guideline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Guideline.Horizontal" parent="Guideline">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Guideline.Vertical" parent="Guideline">
        <item name="android:orientation">vertical</item>
    </style>
</resources>