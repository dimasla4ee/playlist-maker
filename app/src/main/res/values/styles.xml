<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Widgets-->
    <style name="Widget.PlaylistMaker" parent="" />

    <style name="Widget.PlaylistMaker.AppBar" parent="Widget.Material3.Toolbar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="titleTextAppearance">@style/TextAppearance.PlaylistMaker.AppBar.Title</item>
    </style>

    <style name="Widget.PlaylistMaker.Setting.Base" parent="Text.Regular.16">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/Setting.Height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/App.Padding.Horizontal</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="Widget.PlaylistMaker.Setting.Button" parent="Widget.PlaylistMaker.Setting.Base">
        <item name="drawableTint">?colorOnSurfaceVariant</item>
    </style>

    <style name="Widget.PlaylistMaker.Setting.Switch" parent="Widget.PlaylistMaker.Setting.Base">
        <item name="thumbTint">@color/switch_thumb_state</item>
        <item name="trackTint">@color/switch_track_state</item>
    </style>

    <!--Search styling-->
    <style name="Widget.PlaylistMaker.Search.Bar" parent="Widget.Material3Expressive.SearchBar">
        <item name="liftOnScroll">false</item>
        <item name="hideNavigationIcon">false</item>
        <item name="navigationIconTint">?attr/colorOnSurface</item>
        <item name="android:colorControlNormal">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.PlaylistMaker.Search.Bar.Light" parent="Widget.PlaylistMaker.Search.Bar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.PlaylistMaker.Search.Light</item>
    </style>

    <style name="Widget.PlaylistMaker.Search.Bar.Dark" parent="Widget.PlaylistMaker.Search.Bar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.PlaylistMaker.Search.Dark</item>
    </style>

    <style name="Widget.PlaylistMaker.Search.View" parent="Widget.Material3Expressive.SearchView">
        <item name="backgroundTint">?attr/colorSurfaceContainer</item>
        <item name="android:colorControlNormal">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.PlaylistMaker.Search.View.Light" parent="Widget.PlaylistMaker.Search.View">
        <item name="materialThemeOverlay">@style/ThemeOverlay.PlaylistMaker.Search.Light</item>
    </style>

    <style name="Widget.PlaylistMaker.Search.View.Dark" parent="Widget.PlaylistMaker.Search.View">
        <item name="materialThemeOverlay">@style/ThemeOverlay.PlaylistMaker.Search.Dark</item>
    </style>

    <style name="ThemeOverlay.PlaylistMaker.Search.Light" parent="">
        <item name="colorSurfaceContainer">@color/ice_blue</item>
        <item name="colorOnSurfaceVariant">@color/dark_gray</item>
        <item name="colorOnSurface">@color/dark_gray</item>
    </style>

    <style name="ThemeOverlay.PlaylistMaker.Search.Dark" parent="">
        <item name="colorSurfaceContainer">@color/dark_gray</item>
        <item name="colorOnSurfaceVariant">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <!--Bottom Navigation styling-->
    <style name="Widget.PlaylistMaker.BottomNavigationView.Light" parent="Widget.Material3Expressive.BottomNavigationView">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.PlaylistMaker.BottomNavigationView.Light
        </item>
    </style>

    <style name="Widget.PlaylistMaker.BottomNavigationView.Dark" parent="Widget.Material3Expressive.BottomNavigationView">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.PlaylistMaker.BottomNavigationView.Dark
        </item>
    </style>

    <style name="ThemeOverlay.PlaylistMaker.BottomNavigationView.Light" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="colorSurfaceContainer">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/black</item>
        <item name="colorOnSurface">@color/blue</item>
        <item name="colorOnSecondaryContainer">@color/blue</item>
    </style>

    <style name="ThemeOverlay.PlaylistMaker.BottomNavigationView.Dark" parent="">
        <item name="colorPrimary">@color/black</item>
        <item name="colorSurfaceContainer">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/white</item>
        <item name="colorOnSurface">@color/blue</item>
        <item name="colorOnSecondaryContainer">@color/blue</item>
    </style>

    <style name="Widget.PlaylistMaker.LoadingIndicator" parent="Widget.Material3.LoadingIndicator">
        <item name="indicatorSize">80dp</item>
        <item name="indicatorColor">@color/blue</item>
    </style>

    <!--Image styling-->
    <style name="Widget.PlaylistMaker.Image" />

    <style name="Widget.PlaylistMaker.Image.FixedSquare">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Widget.PlaylistMaker.Image.FixedSquare.Small">
        <item name="android:layout_width">@dimen/AlbumCover.Size</item>
        <item name="android:layout_height">@dimen/AlbumCover.Size</item>
    </style>

    <style name="Widget.PlaylistMaker.Icon">
        <item name="android:backgroundTint">@color/transparent</item>
    </style>

    <style name="Widget.PlaylistMaker.Icon.Small">
        <item name="android:layout_width">@dimen/normal_150</item>
        <item name="android:layout_height">@dimen/normal_150</item>
        <item name="tint">?attr/colorOnSurfaceVariant</item>
    </style>

    <!-- Weight styles -->
    <style name="Weight" />

    <style name="Weight.Horizontal" parent="Weight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Weight.Horizontal.1" parent="Weight.Horizontal">
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Constraint Layout styles -->
    <style name="ConstraintLayout">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Guidelines -->
    <style name="Guideline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Guideline.Horizontal" parent="Guideline">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Guideline.Vertical" parent="Guideline">
        <item name="android:orientation">vertical</item>
    </style>
</resources>