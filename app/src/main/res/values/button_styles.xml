<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.PlaylistMaker.IconButton" parent="Widget.Material3Expressive.Button.IconButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.PlaylistMaker.IconButton.Medium" parent="Widget.PlaylistMaker.IconButton">
        <item name="iconTint">?attr/colorOnSecondaryContainer</item>
        <item name="backgroundTint">?attr/colorSecondaryContainer</item>
    </style>

    <style name="Widget.PlaylistMaker.IconButton.Large" parent="Widget.PlaylistMaker.IconButton">
        <item name="iconTint">?attr/colorSurface</item>
        <item name="backgroundTint">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.PlaylistMaker.Button" parent="Widget.Material3Expressive.Button">
        <item name="materialSizeOverlay">@style/SizeOverlay.Material3Expressive.Button.Medium</item>
        <item name="android:textAppearance">@style/TextAppearance.PlaylistMaker.TitleSmall</item>
    </style>

    <style name="Widget.PlaylistMaker.Button.Light" parent="Widget.PlaylistMaker.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.PlaylistMaker.Button.Light</item>
    </style>

    <style name="ThemeOverlay.PlaylistMaker.Button.Light" parent="ThemeOverlay.Material3Expressive.Button.Filled">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Widget.PlaylistMaker.Button.Dark" parent="Widget.PlaylistMaker.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.PlaylistMaker.Button.Dark</item>
    </style>

    <style name="ThemeOverlay.PlaylistMaker.Button.Dark" parent="ThemeOverlay.Material3Expressive.Button.Filled">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>
</resources>
