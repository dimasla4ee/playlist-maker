<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.PlaylistMaker.IconButton" parent="Widget.Material3Expressive.Button.IconButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.PlaylistMaker.IconButton.Medium" parent="Widget.PlaylistMaker.IconButton">
        <item name="iconTint">@color/fabIcon</item>
        <item name="materialSizeOverlay">
            @style/SizeOverlay.Material3Expressive.Button.IconButton.Medium
        </item>
        <item name="backgroundTint">@color/fabBackground</item>
    </style>

    <style name="Widget.PlaylistMaker.IconButton.Large" parent="Widget.PlaylistMaker.IconButton">
        <item name="iconTint">@color/playbackFabIcon</item>
        <item name="materialSizeOverlay">
            @style/SizeOverlay.Material3Expressive.Button.IconButton.Large
        </item>
        <item name="backgroundTint">@color/playbackFabBackground</item>
    </style>

    <style name="Widget.PlaylistMaker.Button" parent="Widget.Material3Expressive.Button">
        <item name="materialSizeOverlay">@style/SizeOverlay.Material3Expressive.Button.Medium</item>
        <item name="android:textAppearance">@style/TextAppearance.PlaylistMaker.TitleSmall</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.PlaylistMaker.Button</item>
    </style>

    <style name="ThemeOverlay.PlaylistMaker.Button" parent="ThemeOverlay.Material3Expressive.Button.Filled">
        <item name="colorPrimary">@color/buttonBackground</item>
        <item name="colorOnPrimary">@color/buttonText</item>
    </style>

</resources>
